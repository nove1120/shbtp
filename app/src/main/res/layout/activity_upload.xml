<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/t ools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activitys.UploadActivity">


    <ImageView
        android:id="@+id/returnButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="发布"
        android:textStyle="bold"
        android:typeface="sans"
        android:textColor="#FF000000"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/uploadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:text="发布"
        android:clickable="false"
        android:textStyle="bold"
        android:typeface="sans"
        android:textColor="#77000000"
        android:textSize="15sp"
        android:background="@drawable/rounded_upload_text"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@+id/titleText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:fillViewport="true"
                >
                <EditText
                    android:id="@+id/descEdit"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="top"
                    android:background="@null"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:hint="描述一下你的宝贝吧~"
                    android:textSize="16sp"
                    android:paddingTop="10dp"
                    />

            </ScrollView>
            <LinearLayout
                android:id="@+id/recyclerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.nove1120.activitys.UploadActivity"
                >

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:overScrollMode="never"/>

            </LinearLayout>


            <View
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="@color/colorLoginEditLine"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="15dp"/>
            <LinearLayout
                android:id="@+id/bookBaseLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_detiled_info"
                    android:layout_marginStart="18dp"/>
                <TextView
                    android:id="@+id/bookBaseText"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="详细信息"
                    android:textSize="16sp"
                    android:gravity="center|left"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="15dp"/>
            </LinearLayout>
            <View
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="@color/colorLoginEditLine"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"  />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_price"
                    android:layout_marginStart="18dp"/>
                <TextView
                    android:id="@+id/priceText"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="价格"

                    android:textSize="16sp"
                    android:gravity="center"
                    />
                <EditText
                    android:id="@+id/priceEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:layout_marginEnd="23dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@null"
                    android:lines="1"
                    android:inputType="numberDecimal"
                    />

            </LinearLayout>
            <View
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="@color/colorLoginEditLine"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"  />

            <LinearLayout
                android:id="@+id/gradeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_grade"
                    android:layout_marginStart="18dp"/>
                <TextView
                    android:id="@+id/gradeText"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="成色"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:gravity="center|left"
                    />
                <com.nove1120.widget.MySpinner
                    android:id="@+id/gradeSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:minWidth="250dp"
                    android:gravity="center|right"
                    android:layout_marginEnd="15dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@null"
                    android:lines="1"
                    android:inputType="numberDecimal"
                    android:entries="@array/bookGrade"
                    android:spinnerMode="dialog"
                    />

            </LinearLayout>
            <View
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="@color/colorLoginEditLine"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp" />

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
