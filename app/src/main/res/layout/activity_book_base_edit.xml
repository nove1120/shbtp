<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.BookBaseEditActivity">

    <ImageView
        android:id="@+id/returnButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="详细信息"
        android:textStyle="bold"
        android:typeface="sans"
        android:textColor="#FF000000"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/confirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:text="确认"
        android:clickable="false"
        android:textStyle="bold"
        android:typeface="sans"
        android:textColor="#77000000"
        android:textSize="15sp"
        android:background="@drawable/rounded_upload_text"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@+id/titleText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/publishInfoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="15dp"

                android:text="出版信息"
                android:textStyle="bold"
                android:textSize="18sp"/>


            <View
                android:id="@+id/line1"
                android:layout_height="3dp"
                android:layout_width="match_parent"
                android:background="@color/colorBookUploadEditLine"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/publishInfoTitle"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/bookNameText"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="书名"
                android:textSize="15sp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/line1"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="15dp"
                />
            <EditText
                android:id="@+id/bookNameEdit"
                android:layout_width="0dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="@+id/bookNameText"
                app:layout_constraintEnd_toEndOf="@+id/line1"
                app:layout_constraintStart_toEndOf="@+id/bookNameText"
                android:layout_marginEnd="3dp"
                android:gravity="center|right"
                android:textSize="15sp"
                android:background="@null"
                android:lines="1"
                android:inputType="text"
                />
            <View
                android:id="@+id/line2"
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="@color/colorBookUploadEditLine"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toBottomOf="@+id/bookNameEdit"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/authorText"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="作者"
                android:textSize="15sp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/line2"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="15dp"
                />
            <EditText
                android:id="@+id/authorEdit"
                android:layout_width="0dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="@+id/authorText"
                app:layout_constraintEnd_toEndOf="@+id/line1"
                app:layout_constraintStart_toEndOf="@+id/authorText"
                android:layout_marginEnd="3dp"
                android:gravity="center|right"
                android:textSize="15sp"
                android:background="@null"
                android:lines="1"
                android:inputType="text"
                />


            <View
                android:id="@+id/line3"
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="@color/colorBookUploadEditLine"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toBottomOf="@+id/authorEdit"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/publisherText"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="出版社"
                android:textSize="15sp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/line3"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="15dp"
                />
            <EditText
                android:id="@+id/publisherEdit"
                android:layout_width="0dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="@+id/publisherText"
                app:layout_constraintEnd_toEndOf="@+id/line1"
                app:layout_constraintStart_toEndOf="@+id/publisherText"
                android:layout_marginEnd="3dp"
                android:gravity="center|right"
                android:textSize="15sp"
                android:background="@null"
                android:lines="1"
                android:inputType="text"
                />
            <View
                android:id="@+id/line4"
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="@color/colorBookUploadEditLine"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toBottomOf="@+id/publisherEdit"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <LinearLayout
                android:id="@+id/publishTimeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/line4"
                app:layout_constraintLeft_toLeftOf="parent">


            <TextView
                android:id="@+id/publishTimeText"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="版次"
                android:layout_weight="1"
                android:textSize="15sp"
                android:gravity="center|left"
                android:layout_marginStart="15dp"
                />
            <com.nove1120.widget.MySpinner
                android:id="@+id/publishTimeSpinner"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:gravity="center|right"
                android:textSize="15sp"
                android:background="@null"
                android:spinnerMode="dialog"
                />
            </LinearLayout>
            <View
                android:id="@+id/line5"
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="@color/colorBookUploadEditLine"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toBottomOf="@+id/publishTimeLayout"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/ISBNText"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="ISBN"
                android:textSize="15sp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/line5"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="15dp"
                />
            <EditText
                android:id="@+id/ISBNEdit"
                android:layout_width="0dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="@+id/ISBNText"
                app:layout_constraintEnd_toEndOf="@+id/line1"
                app:layout_constraintStart_toEndOf="@+id/ISBNText"
                android:layout_marginEnd="3dp"
                android:gravity="center|right"
                android:textSize="15sp"
                android:background="@null"
                android:lines="1"
                android:maxLength="13"
                android:inputType="number"
                />

            <View
                android:id="@+id/line6"
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="@color/colorBookUploadEditLine"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toBottomOf="@+id/ISBNEdit"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <LinearLayout
                android:id="@+id/categoryLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/line6"
                app:layout_constraintLeft_toLeftOf="parent">

            <TextView
                android:id="@+id/categoryText"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="分类"
                android:textSize="15sp"
                android:gravity="center|left"

                android:layout_weight="1"

                android:layout_marginStart="15dp"
                />
            <com.nove1120.widget.MySpinner
                android:id="@+id/categorySpinner"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:gravity="right"
                android:textSize="15sp"
                android:background="@null"
                android:spinnerMode="dialog"
                android:entries="@array/bookCategory"
                />
            </LinearLayout>
            <View
                android:id="@+id/line7"
                android:layout_height="3dp"
                android:layout_width="match_parent"
                android:background="@color/colorBookUploadEditLine"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toBottomOf="@+id/categoryLayout"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/positionInfoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/line7"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="15dp"
                android:layout_marginTop="25dp"

                android:text="位置信息"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <View
                android:id="@+id/line8"
                android:layout_height="3dp"
                android:layout_width="match_parent"
                android:background="@color/colorBookUploadEditLine"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/positionInfoTitle"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <LinearLayout
                android:id="@+id/positionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/line8"
                app:layout_constraintLeft_toLeftOf="parent">
                <TextView
                    android:id="@+id/positionText"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="发布位置"
                    android:textSize="15sp"
                    android:gravity="center|left"
                    android:layout_marginStart="15dp"
                    />
                <TextView
                    android:id="@+id/positionEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center|right"
                    android:textSize="15sp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:id="@+id/positionImage"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:visibility="visible"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="15dp"/>
            </LinearLayout>

            <View
                android:id="@+id/line9"
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="@color/colorBookUploadEditLine"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toBottomOf="@+id/positionLayout"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:id="@+id/schoolText"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="所在高校"
                android:textSize="15sp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/line9"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="15dp"
                />
            <EditText
                android:id="@+id/schoolEdit"
                android:layout_width="0dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="@+id/schoolText"
                app:layout_constraintEnd_toEndOf="@+id/line1"
                app:layout_constraintStart_toEndOf="@+id/schoolText"
                android:layout_marginEnd="3dp"
                android:gravity="center|right"
                android:textSize="15sp"
                android:background="@null"
                android:lines="1"
                android:inputType="text"
                />

            <View
                android:id="@+id/line10"
                android:layout_height="3dp"
                android:layout_width="match_parent"
                android:background="@color/colorBookUploadEditLine"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toBottomOf="@+id/schoolEdit"
                app:layout_constraintLeft_toLeftOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>