<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.PersonalInfoActivity">


        <ImageView
            android:id="@+id/returnButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/titleText"
            app:layout_constraintBottom_toBottomOf="@+id/titleText"
            android:layout_marginStart="4dp"/>

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:gravity="center"
        android:text="个人信息"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/confirmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/titleText"
            app:layout_constraintBottom_toBottomOf="@+id/titleText"
            android:layout_marginEnd="10dp"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:text="确认"
            android:clickable="false"
            android:textStyle="bold"
            android:typeface="sans"
            android:textColor="@color/textColorGray"
            android:textSize="15sp"
            android:background="@drawable/rounded_upload_text"/>



    <ScrollView
        android:layout_marginTop="10dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/titleText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true"
        android:paddingTop="15dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/InfoLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/faceText"
                android:layout_width="0dp"
                android:layout_height="65dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/faceCardView"
                android:text="头像"
                android:textSize="16sp"
                android:layout_marginStart="15dp"
                android:gravity="center|left"/>
            <androidx.cardview.widget.CardView

                android:id="@+id/faceCardView"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toTopOf="@+id/faceText"
                app:layout_constraintBottom_toBottomOf="@+id/faceText"
                app:layout_constraintEnd_toStartOf="@+id/faceRightImage"
                android:layout_gravity="center"
                app:cardCornerRadius="5dp"
                android:clickable="true"
                android:layout_marginEnd="10dp"
                >
                <ImageView
                    android:id="@+id/faceImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/noface"
                    android:scaleType="fitXY"/>
            </androidx.cardview.widget.CardView>
            <ImageView
                android:id="@+id/faceRightImage"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:visibility="visible"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:layout_gravity="center"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toTopOf="@+id/faceText"
                app:layout_constraintBottom_toBottomOf="@+id/faceText"
                app:layout_constraintEnd_toEndOf="parent"/>

            <View
                android:id="@+id/line1"
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="@color/colorBookUploadEditLine"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/faceText"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:id="@+id/userNameText"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="@id/line1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:text="用户名"
                android:textSize="16sp"
                android:layout_marginStart="15dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/userNameEdit"
                android:layout_width="0dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="@+id/userNameText"
                app:layout_constraintBottom_toBottomOf="@+id/userNameText"
                app:layout_constraintStart_toEndOf="@+id/userNameText"
                app:layout_constraintEnd_toStartOf="@+id/userNameRightImage"
                android:text=""
                android:textSize="16sp"
                android:gravity="center|right"
                android:layout_marginEnd="10dp"/>
            <ImageView
                android:id="@+id/userNameRightImage"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:visibility="visible"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:layout_gravity="center"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toTopOf="@+id/userNameText"
                app:layout_constraintBottom_toBottomOf="@+id/userNameText"
                app:layout_constraintEnd_toEndOf="parent"/>
            <View
                android:id="@+id/line2"
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="@color/colorBookUploadEditLine"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/userNameText"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:id="@+id/genderText"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="@id/line2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:text="性别"
                android:textSize="16sp"
                android:layout_marginStart="15dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/genderEdit"
                android:layout_width="0dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="@+id/genderText"
                app:layout_constraintBottom_toBottomOf="@+id/genderText"
                app:layout_constraintEnd_toStartOf="@+id/genderRightImage"
                app:layout_constraintStart_toEndOf="@+id/genderText"
                android:text="未选择"
                android:textSize="16sp"
                android:gravity="center|right"
                android:layout_marginEnd="10dp"/>
            <com.nove1120.widget.MySpinner
                android:id="@+id/genderSpinner"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible"
                android:layout_weight="1"
                android:entries="@array/genderSelect"
                android:spinnerMode="dialog"
                android:background="@null"
                app:layout_constraintTop_toTopOf="@id/genderText"
                app:layout_constraintBottom_toBottomOf="@+id/genderText"
                app:layout_constraintStart_toEndOf="@id/genderEdit"
                />
            <ImageView
                android:id="@+id/genderRightImage"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:visibility="visible"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:layout_gravity="center"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toTopOf="@+id/genderText"
                app:layout_constraintBottom_toBottomOf="@+id/genderText"
                app:layout_constraintEnd_toEndOf="parent"/>
            <View
                android:id="@+id/line3"
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="@color/colorBookUploadEditLine"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/genderText"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:id="@+id/birthdayText"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="@id/line3"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:text="生日"
                android:textSize="16sp"
                android:layout_marginStart="15dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/birthdayEdit"
                android:layout_width="0dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="@+id/birthdayText"
                app:layout_constraintBottom_toBottomOf="@+id/birthdayText"
                app:layout_constraintEnd_toStartOf="@+id/birthdayRightImage"
                app:layout_constraintStart_toEndOf="@+id/birthdayText"
                android:text="未选择"
                android:textSize="16sp"
                android:gravity="center|right"
                android:layout_marginEnd="10dp"/>
            <ImageView
                android:id="@+id/birthdayRightImage"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:visibility="visible"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:layout_gravity="center"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toTopOf="@+id/birthdayText"
                app:layout_constraintBottom_toBottomOf="@+id/birthdayText"
                app:layout_constraintEnd_toEndOf="parent"/>
            <View
                android:id="@+id/line4"
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="@color/colorBookUploadEditLine"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/birthdayText"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:id="@+id/locationText"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="@id/line4"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:text="所在地"
                android:textSize="16sp"
                android:layout_marginStart="15dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/locationEdit"
                android:layout_width="0dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="@+id/locationText"
                app:layout_constraintBottom_toBottomOf="@+id/locationText"
                app:layout_constraintEnd_toStartOf="@+id/locationRightImage"
                app:layout_constraintStart_toEndOf="@+id/locationText"
                android:text="未选择"
                android:textSize="16sp"
                android:gravity="center|right"
                android:layout_marginEnd="10dp"/>
            <ImageView
                android:id="@+id/locationRightImage"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:visibility="visible"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:layout_gravity="center"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toTopOf="@+id/locationText"
                app:layout_constraintBottom_toBottomOf="@+id/locationText"
                app:layout_constraintEnd_toEndOf="parent"/>
            <View
                android:id="@+id/line5"
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="@color/colorBookUploadEditLine"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/locationText"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:id="@+id/schoolText"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="@id/line5"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:text="学校"
                android:textSize="16sp"
                android:layout_marginStart="15dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/schoolEdit"
                android:layout_width="0dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="@+id/schoolText"
                app:layout_constraintBottom_toBottomOf="@+id/schoolText"
                app:layout_constraintEnd_toStartOf="@+id/schoolRightImage"
                app:layout_constraintStart_toEndOf="@+id/schoolText"
                android:text="未填写"
                android:textSize="16sp"
                android:gravity="center|right"
                android:layout_marginEnd="10dp"/>
            <ImageView
                android:id="@+id/schoolRightImage"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:visibility="visible"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:layout_gravity="center"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toTopOf="@+id/schoolText"
                app:layout_constraintBottom_toBottomOf="@+id/schoolText"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>